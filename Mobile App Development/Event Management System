import React, { useState, useEffect } from 'react';
import { Calendar, Plus, X, Users, MapPin, Clock, Tag, Search, Filter, Edit2, Trash2, Check, Bell, ChevronLeft, ChevronRight } from 'lucide-react';

export default function EventManagementSystem() {
  const [events, setEvents] = useState([]);
  const [view, setView] = useState('calendar'); // calendar, list, create, edit
  const [selectedEvent, setSelectedEvent] = useState(null);
  const [searchTerm, setSearchTerm] = useState('');
  const [filterCategory, setFilterCategory] = useState('all');
  const [currentDate, setCurrentDate] = useState(new Date());
  const [formData, setFormData] = useState({
    title: '',
    description: '',
    date: '',
    time: '',
    location: '',
    category: 'meeting',
    capacity: '',
    attendees: []
  });

  const categories = [
    { value: 'meeting', label: 'Meeting', color: 'bg-blue-500' },
    { value: 'workshop', label: 'Workshop', color: 'bg-purple-500' },
    { value: 'conference', label: 'Conference', color: 'bg-green-500' },
    { value: 'social', label: 'Social', color: 'bg-pink-500' },
    { value: 'webinar', label: 'Webinar', color: 'bg-orange-500' },
    { value: 'other', label: 'Other', color: 'bg-gray-500' }
  ];

  useEffect(() => {
    loadEvents();
  }, []);

  const loadEvents = async () => {
    try {
      const keys = await window.storage.list('event:');
      if (keys && keys.keys) {
        const eventPromises = keys.keys.map(async (key) => {
          const result = await window.storage.get(key);
          return result ? JSON.parse(result.value) : null;
        });
        const loadedEvents = (await Promise.all(eventPromises)).filter(Boolean);
        setEvents(loadedEvents);
      }
    } catch (error) {
      console.log('No existing events found');
    }
  };

  const saveEvent = async (event) => {
    try {
      await window.storage.set(event.id, JSON.stringify(event));
    } catch (error) {
      console.error('Error saving event:', error);
    }
  };

  const deleteEvent = async (eventId) => {
    try {
      await window.storage.delete(eventId);
      setEvents(events.filter(e => e.id !== eventId));
      setView('calendar');
    } catch (error) {
      console.error('Error deleting event:', error);
    }
  };

  const handleCreateEvent = async () => {
    if (!formData.title || !formData.date || !formData.time) {
      alert('Please fill in all required fields');
      return;
    }

    const newEvent = {
      id: `event:${Date.now()}`,
      ...formData,
      createdAt: new Date().toISOString(),
      attendees: []
    };

    await saveEvent(newEvent);
    setEvents([...events, newEvent]);
    resetForm();
    setView('calendar');
  };

  const handleUpdateEvent = async () => {
    const updatedEvent = {
      ...selectedEvent,
      ...formData
    };

    await saveEvent(updatedEvent);
    setEvents(events.map(e => e.id === updatedEvent.id ? updatedEvent : e));
    resetForm();
    setView('calendar');
  };

  const handleRSVP = async (eventId) => {
    const event = events.find(e => e.id === eventId);
    const userName = prompt('Enter your name to RSVP:');
    
    if (userName && userName.trim()) {
      const capacity = parseInt(event.capacity);
      if (capacity && event.attendees.length >= capacity) {
        alert('Sorry, this event is at full capacity!');
        return;
      }

      const updatedEvent = {
        ...event,
        attendees: [...event.attendees, { name: userName.trim(), rsvpDate: new Date().toISOString() }]
      };

      await saveEvent(updatedEvent);
      setEvents(events.map(e => e.id === eventId ? updatedEvent : e));
    }
  };

  const resetForm = () => {
    setFormData({
      title: '',
      description: '',
      date: '',
      time: '',
      location: '',
      category: 'meeting',
      capacity: '',
      attendees: []
    });
    setSelectedEvent(null);
  };

  const editEvent = (event) => {
    setSelectedEvent(event);
    setFormData({
      title: event.title,
      description: event.description,
      date: event.date,
      time: event.time,
      location: event.location,
      category: event.category,
      capacity: event.capacity,
      attendees: event.attendees
    });
    setView('edit');
  };

  const getDaysInMonth = (date) => {
    const year = date.getFullYear();
    const month = date.getMonth();
    const firstDay = new Date(year, month, 1);
    const lastDay = new Date(year, month + 1, 0);
    const daysInMonth = lastDay.getDate();
    const startingDayOfWeek = firstDay.getDay();

    const days = [];
    for (let i = 0; i < startingDayOfWeek; i++) {
      days.push(null);
    }
    for (let i = 1; i <= daysInMonth; i++) {
      days.push(new Date(year, month, i));
    }
    return days;
  };

  const getEventsForDate = (date) => {
    if (!date) return [];
    const dateStr = date.toISOString().split('T')[0];
    return events.filter(e => e.date === dateStr);
  };

  const filteredEvents = events.filter(event => {
    const matchesSearch = event.title.toLowerCase().includes(searchTerm.toLowerCase()) ||
                         event.description.toLowerCase().includes(searchTerm.toLowerCase());
    const matchesCategory = filterCategory === 'all' || event.category === filterCategory;
    return matchesSearch && matchesCategory;
  });

  const getCategoryColor = (category) => {
    return categories.find(c => c.value === category)?.color || 'bg-gray-500';
  };

  const formatDate = (dateStr) => {
    const date = new Date(dateStr);
    return date.toLocaleDateString('en-US', { weekday: 'short', year: 'numeric', month: 'short', day: 'numeric' });
  };

  const monthNames = ["January", "February", "March", "April", "May", "June",
    "July", "August", "September", "October", "November", "December"];

  const changeMonth = (delta) => {
    setCurrentDate(new Date(currentDate.getFullYear(), currentDate.getMonth() + delta, 1));
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900 p-6">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <div className="flex items-center justify-between mb-6">
          <div className="flex items-center gap-3">
            <Calendar className="text-pink-300" size={40} />
            <div>
              <h1 className="text-4xl font-bold text-white">Event Manager</h1>
              <p className="text-purple-200">Organize and track your events</p>
            </div>
          </div>
          <button
            onClick={() => setView('create')}
            className="px-6 py-3 bg-gradient-to-r from-pink-500 to-purple-500 hover:from-pink-600 hover:to-purple-600 text-white rounded-lg font-semibold flex items-center gap-2 transition-all shadow-lg"
          >
            <Plus size={20} />
            New Event
          </button>
        </div>

        {/* Search and Filter Bar */}
        <div className="bg-white/10 backdrop-blur-lg rounded-xl p-4 mb-6 border border-white/20">
          <div className="flex flex-wrap gap-4 items-center">
            <div className="flex-1 min-w-[200px]">
              <div className="relative">
                <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-purple-300" size={20} />
                <input
                  type="text"
                  placeholder="Search events..."
                  value={searchTerm}
                  onChange={(e) => setSearchTerm(e.target.value)}
                  className="w-full pl-10 pr-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-400"
                />
              </div>
            </div>
            <select
              value={filterCategory}
              onChange={(e) => setFilterCategory(e.target.value)}
              className="px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-purple-400"
            >
              <option value="all">All Categories</option>
              {categories.map(cat => (
                <option key={cat.value} value={cat.value}>{cat.label}</option>
              ))}
            </select>
            <div className="flex gap-2">
              <button
                onClick={() => setView('calendar')}
                className={`px-4 py-2 rounded-lg font-semibold transition-colors ${
                  view === 'calendar' ? 'bg-purple-500 text-white' : 'bg-white/10 text-purple-200 hover:bg-white/20'
                }`}
              >
                Calendar
              </button>
              <button
                onClick={() => setView('list')}
                className={`px-4 py-2 rounded-lg font-semibold transition-colors ${
                  view === 'list' ? 'bg-purple-500 text-white' : 'bg-white/10 text-purple-200 hover:bg-white/20'
                }`}
              >
                List
              </button>
            </div>
          </div>
        </div>

        {/* Calendar View */}
        {view === 'calendar' && (
          <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
            <div className="flex items-center justify-between mb-6">
              <button
                onClick={() => changeMonth(-1)}
                className="p-2 hover:bg-white/10 rounded-lg transition-colors"
              >
                <ChevronLeft className="text-white" size={24} />
              </button>
              <h2 className="text-2xl font-bold text-white">
                {monthNames[currentDate.getMonth()]} {currentDate.getFullYear()}
              </h2>
              <button
                onClick={() => changeMonth(1)}
                className="p-2 hover:bg-white/10 rounded-lg transition-colors"
              >
                <ChevronRight className="text-white" size={24} />
              </button>
            </div>

            <div className="grid grid-cols-7 gap-2">
              {['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'].map(day => (
                <div key={day} className="text-center font-semibold text-purple-300 py-2">
                  {day}
                </div>
              ))}
              {getDaysInMonth(currentDate).map((date, idx) => {
                const dayEvents = date ? getEventsForDate(date) : [];
                const isToday = date && date.toDateString() === new Date().toDateString();
                
                return (
                  <div
                    key={idx}
                    className={`min-h-[100px] p-2 rounded-lg border ${
                      date
                        ? isToday
                          ? 'bg-purple-500/30 border-purple-400'
                          : 'bg-white/5 border-white/10 hover:bg-white/10'
                        : 'bg-transparent border-transparent'
                    } transition-colors`}
                  >
                    {date && (
                      <>
                        <div className="text-white font-semibold mb-1">{date.getDate()}</div>
                        <div className="space-y-1">
                          {dayEvents.slice(0, 2).map(event => (
                            <div
                              key={event.id}
                              onClick={() => {
                                setSelectedEvent(event);
                                setView('detail');
                              }}
                              className={`${getCategoryColor(event.category)} text-white text-xs p-1 rounded cursor-pointer hover:opacity-80 truncate`}
                            >
                              {event.title}
                            </div>
                          ))}
                          {dayEvents.length > 2 && (
                            <div className="text-purple-300 text-xs">+{dayEvents.length - 2} more</div>
                          )}
                        </div>
                      </>
                    )}
                  </div>
                );
              })}
            </div>
          </div>
        )}

        {/* List View */}
        {view === 'list' && (
          <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
            <h2 className="text-2xl font-bold text-white mb-4">All Events</h2>
            <div className="space-y-3">
              {filteredEvents.length === 0 ? (
                <p className="text-purple-300 text-center py-8">No events found</p>
              ) : (
                filteredEvents.map(event => (
                  <div
                    key={event.id}
                    className="bg-white/10 rounded-lg p-4 hover:bg-white/20 transition-colors cursor-pointer"
                    onClick={() => {
                      setSelectedEvent(event);
                      setView('detail');
                    }}
                  >
                    <div className="flex items-start justify-between">
                      <div className="flex-1">
                        <div className="flex items-center gap-2 mb-2">
                          <span className={`${getCategoryColor(event.category)} px-3 py-1 rounded-full text-xs text-white font-semibold`}>
                            {categories.find(c => c.value === event.category)?.label}
                          </span>
                          <h3 className="text-lg font-bold text-white">{event.title}</h3>
                        </div>
                        <div className="flex flex-wrap gap-4 text-sm text-purple-300">
                          <div className="flex items-center gap-1">
                            <Clock size={16} />
                            {formatDate(event.date)} at {event.time}
                          </div>
                          {event.location && (
                            <div className="flex items-center gap-1">
                              <MapPin size={16} />
                              {event.location}
                            </div>
                          )}
                          <div className="flex items-center gap-1">
                            <Users size={16} />
                            {event.attendees.length}
                            {event.capacity && ` / ${event.capacity}`}
                          </div>
                        </div>
                      </div>
                      <div className="flex gap-2">
                        <button
                          onClick={(e) => {
                            e.stopPropagation();
                            editEvent(event);
                          }}
                          className="p-2 hover:bg-white/10 rounded-lg transition-colors"
                        >
                          <Edit2 className="text-blue-400" size={18} />
                        </button>
                        <button
                          onClick={(e) => {
                            e.stopPropagation();
                            if (confirm('Delete this event?')) deleteEvent(event.id);
                          }}
                          className="p-2 hover:bg-white/10 rounded-lg transition-colors"
                        >
                          <Trash2 className="text-red-400" size={18} />
                        </button>
                      </div>
                    </div>
                  </div>
                ))
              )}
            </div>
          </div>
        )}

        {/* Event Detail View */}
        {view === 'detail' && selectedEvent && (
          <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
            <div className="flex items-start justify-between mb-6">
              <div className="flex-1">
                <div className="flex items-center gap-3 mb-4">
                  <span className={`${getCategoryColor(selectedEvent.category)} px-4 py-2 rounded-full text-sm text-white font-semibold`}>
                    {categories.find(c => c.value === selectedEvent.category)?.label}
                  </span>
                  <h2 className="text-3xl font-bold text-white">{selectedEvent.title}</h2>
                </div>
                <p className="text-purple-200 text-lg mb-6">{selectedEvent.description}</p>
                
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                  <div className="bg-white/10 rounded-lg p-4">
                    <div className="flex items-center gap-2 text-purple-300 mb-2">
                      <Clock size={20} />
                      <span className="font-semibold">Date & Time</span>
                    </div>
                    <p className="text-white">{formatDate(selectedEvent.date)}</p>
                    <p className="text-white">{selectedEvent.time}</p>
                  </div>
                  
                  {selectedEvent.location && (
                    <div className="bg-white/10 rounded-lg p-4">
                      <div className="flex items-center gap-2 text-purple-300 mb-2">
                        <MapPin size={20} />
                        <span className="font-semibold">Location</span>
                      </div>
                      <p className="text-white">{selectedEvent.location}</p>
                    </div>
                  )}
                  
                  <div className="bg-white/10 rounded-lg p-4">
                    <div className="flex items-center gap-2 text-purple-300 mb-2">
                      <Users size={20} />
                      <span className="font-semibold">Attendees</span>
                    </div>
                    <p className="text-white">
                      {selectedEvent.attendees.length}
                      {selectedEvent.capacity && ` / ${selectedEvent.capacity} spots`}
                    </p>
                  </div>
                </div>

                {selectedEvent.attendees.length > 0 && (
                  <div className="bg-white/10 rounded-lg p-4 mb-6">
                    <h3 className="text-white font-semibold mb-3">Registered Attendees</h3>
                    <div className="space-y-2">
                      {selectedEvent.attendees.map((attendee, idx) => (
                        <div key={idx} className="flex items-center justify-between text-purple-200">
                          <span>{attendee.name}</span>
                          <span className="text-sm">{new Date(attendee.rsvpDate).toLocaleDateString()}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>

            <div className="flex gap-3">
              <button
                onClick={() => handleRSVP(selectedEvent.id)}
                className="px-6 py-3 bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white rounded-lg font-semibold flex items-center gap-2 transition-all"
              >
                <Check size={20} />
                RSVP to Event
              </button>
              <button
                onClick={() => editEvent(selectedEvent)}
                className="px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-semibold flex items-center gap-2 transition-all"
              >
                <Edit2 size={20} />
                Edit
              </button>
              <button
                onClick={() => setView('calendar')}
                className="px-6 py-3 bg-white/10 hover:bg-white/20 text-white rounded-lg font-semibold transition-all"
              >
                Back
              </button>
            </div>
          </div>
        )}

        {/* Create/Edit Event Form */}
        {(view === 'create' || view === 'edit') && (
          <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
            <h2 className="text-2xl font-bold text-white mb-6">
              {view === 'create' ? 'Create New Event' : 'Edit Event'}
            </h2>
            
            <div className="space-y-4">
              <div>
                <label className="block text-purple-200 mb-2">Event Title *</label>
                <input
                  type="text"
                  value={formData.title}
                  onChange={(e) => setFormData({ ...formData, title: e.target.value })}
                  className="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-400"
                  placeholder="Enter event title"
                />
              </div>

              <div>
                <label className="block text-purple-200 mb-2">Description</label>
                <textarea
                  value={formData.description}
                  onChange={(e) => setFormData({ ...formData, description: e.target.value })}
                  className="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-400"
                  rows="3"
                  placeholder="Enter event description"
                />
              </div>

              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label className="block text-purple-200 mb-2">Date *</label>
                  <input
                    type="date"
                    value={formData.date}
                    onChange={(e) => setFormData({ ...formData, date: e.target.value })}
                    className="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-purple-400"
                  />
                </div>

                <div>
                  <label className="block text-purple-200 mb-2">Time *</label>
                  <input
                    type="time"
                    value={formData.time}
                    onChange={(e) => setFormData({ ...formData, time: e.target.value })}
                    className="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-purple-400"
                  />
                </div>
              </div>

              <div>
                <label className="block text-purple-200 mb-2">Location</label>
                <input
                  type="text"
                  value={formData.location}
                  onChange={(e) => setFormData({ ...formData, location: e.target.value })}
                  className="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-400"
                  placeholder="Enter event location"
                />
              </div>

              <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label className="block text-purple-200 mb-2">Category</label>
                  <select
                    value={formData.category}
                    onChange={(e) => setFormData({ ...formData, category: e.target.value })}
                    className="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-purple-400"
                  >
                    {categories.map(cat => (
                      <option key={cat.value} value={cat.value}>{cat.label}</option>
                    ))}
                  </select>
                </div>

                <div>
                  <label className="block text-purple-200 mb-2">Capacity (Optional)</label>
                  <input
                    type="number"
                    value={formData.capacity}
                    onChange={(e) => setFormData({ ...formData, capacity: e.target.value })}
                    className="w-full px-4 py-2 bg-white/10 border border-white/20 rounded-lg text-white placeholder-purple-300 focus:outline-none focus:ring-2 focus:ring-purple-400"
                    placeholder="Max attendees"
                    min="1"
                  />
                </div>
              </div>

              <div className="flex gap-3 pt-4">
                <button
                  onClick={view === 'create' ? handleCreateEvent : handleUpdateEvent}
                  className="px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white rounded-lg font-semibold transition-all"
                >
                  {view === 'create' ? 'Create Event' : 'Update Event'}
                </button>
                <button
                  onClick={() => {
                    resetForm();
                    setView('calendar');
                  }}
                  className="px-6 py-3 bg-white/10 hover:bg-white/20 text-white rounded-lg font-semibold transition-all"
                >
                  Cancel
                </button>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  );
}

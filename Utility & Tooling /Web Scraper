
import React, { useState } from 'react';
import { Globe, Download, Loader, Search, Link2, FileText, Code, Image, AlertCircle } from 'lucide-react';

export default function WebScraper() {
  const [url, setUrl] = useState('');
  const [loading, setLoading] = useState(false);
  const [result, setResult] = useState(null);
  const [error, setError] = useState('');
  const [extractMode, setExtractMode] = useState('all');

  const extractLinks = (html) => {
    const links = [];
    const linkRegex = /<a\s+(?:[^>]*?\s+)?href=(["'])(.*?)\1/gi;
    let match;
    while ((match = linkRegex.exec(html)) !== null) {
      links.push(match[2]);
    }
    return [...new Set(links)];
  };

  const extractImages = (html) => {
    const images = [];
    const imgRegex = /<img\s+(?:[^>]*?\s+)?src=(["'])(.*?)\1/gi;
    let match;
    while ((match = imgRegex.exec(html)) !== null) {
      images.push(match[2]);
    }
    return [...new Set(images)];
  };

  const extractText = (html) => {
    // Remove script and style tags
    let text = html.replace(/<script\b[^<]*(?:(?!<\/script>)<[^<]*)*<\/script>/gi, '');
    text = text.replace(/<style\b[^<]*(?:(?!<\/style>)<[^<]*)*<\/style>/gi, '');
    // Remove HTML tags
    text = text.replace(/<[^>]+>/g, ' ');
    // Decode HTML entities
    text = text.replace(/&nbsp;/g, ' ');
    text = text.replace(/&amp;/g, '&');
    text = text.replace(/&lt;/g, '<');
    text = text.replace(/&gt;/g, '>');
    text = text.replace(/&quot;/g, '"');
    // Clean up whitespace
    text = text.replace(/\s+/g, ' ').trim();
    return text;
  };

  const extractHeadings = (html) => {
    const headings = [];
    const headingRegex = /<h([1-6])[^>]*>(.*?)<\/h\1>/gi;
    let match;
    while ((match = headingRegex.exec(html)) !== null) {
      const level = match[1];
      const text = match[2].replace(/<[^>]+>/g, '').trim();
      if (text) {
        headings.push({ level: `H${level}`, text });
      }
    }
    return headings;
  };

  const extractMetadata = (html) => {
    const metadata = {};
    
    // Title
    const titleMatch = html.match(/<title[^>]*>(.*?)<\/title>/i);
    if (titleMatch) metadata.title = titleMatch[1].trim();
    
    // Meta tags
    const metaRegex = /<meta\s+(?:[^>]*?\s+)?name=(["'])(.*?)\1\s+(?:[^>]*?\s+)?content=(["'])(.*?)\3/gi;
    let match;
    while ((match = metaRegex.exec(html)) !== null) {
      metadata[match[2]] = match[4];
    }
    
    // OG tags
    const ogRegex = /<meta\s+(?:[^>]*?\s+)?property=(["'])og:(.*?)\1\s+(?:[^>]*?\s+)?content=(["'])(.*?)\3/gi;
    while ((match = ogRegex.exec(html)) !== null) {
      metadata[`og:${match[2]}`] = match[4];
    }
    
    return metadata;
  };

  const scrapeWebsite = async () => {
    if (!url) {
      setError('Please enter a URL');
      return;
    }

    // Validate URL
    try {
      new URL(url);
    } catch (e) {
      setError('Please enter a valid URL (include https://)');
      return;
    }

    setLoading(true);
    setError('');
    setResult(null);

    try {
      const response = await fetch('https://api.anthropic.com/v1/messages', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'claude-sonnet-4-20250514',
          max_tokens: 1000,
          messages: [
            {
              role: 'user',
              content: `Fetch the webpage at ${url} and provide a structured summary including: title, main content description, key points or sections, and any notable features. Be concise.`
            }
          ],
          tools: [
            {
              type: 'web_search_20250305',
              name: 'web_search'
            }
          ]
        })
      });

      const data = await response.json();
      
      // Also try to fetch the actual page
      let pageData = null;
      try {
        const pageResponse = await fetch(url);
        const html = await pageResponse.text();
        
        pageData = {
          links: extractLinks(html),
          images: extractImages(html),
          text: extractText(html),
          headings: extractHeadings(html),
          metadata: extractMetadata(html),
          html: html.substring(0, 5000) + (html.length > 5000 ? '...' : ''),
          fullLength: html.length
        };
      } catch (fetchError) {
        console.log('Direct fetch failed, using AI analysis only');
      }

      const aiSummary = data.content
        .filter(item => item.type === 'text')
        .map(item => item.text)
        .join('\n');

      setResult({
        url,
        aiSummary,
        pageData,
        timestamp: new Date().toISOString()
      });

    } catch (err) {
      setError('Failed to scrape website: ' + err.message);
    } finally {
      setLoading(false);
    }
  };

  const downloadData = (data, filename) => {
    const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = filename;
    a.click();
    URL.revokeObjectURL(url);
  };

  const copyToClipboard = (text) => {
    navigator.clipboard.writeText(text);
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-900 via-indigo-900 to-purple-900 p-6">
      <div className="max-w-6xl mx-auto">
        {/* Header */}
        <div className="mb-8">
          <div className="flex items-center gap-3 mb-2">
            <Globe className="text-blue-300" size={40} />
            <h1 className="text-4xl font-bold text-white">Web Scraper</h1>
          </div>
          <p className="text-blue-200">Extract content, links, images, and metadata from any webpage</p>
        </div>

        {/* Input Section */}
        <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 mb-6 border border-white/20">
          <div className="flex gap-4 mb-4">
            <div className="flex-1">
              <input
                type="text"
                value={url}
                onChange={(e) => setUrl(e.target.value)}
                onKeyPress={(e) => e.key === 'Enter' && scrapeWebsite()}
                placeholder="https://example.com"
                className="w-full px-4 py-3 bg-white/10 border border-white/20 rounded-lg text-white placeholder-blue-300 focus:outline-none focus:ring-2 focus:ring-blue-400"
              />
            </div>
            <button
              onClick={scrapeWebsite}
              disabled={loading}
              className="px-6 py-3 bg-blue-500 hover:bg-blue-600 disabled:bg-gray-600 text-white rounded-lg transition-colors flex items-center gap-2 font-medium"
            >
              {loading ? (
                <>
                  <Loader className="animate-spin" size={20} />
                  Scraping...
                </>
              ) : (
                <>
                  <Search size={20} />
                  Scrape
                </>
              )}
            </button>
          </div>

          {error && (
            <div className="flex items-center gap-2 text-red-300 bg-red-500/20 px-4 py-2 rounded-lg">
              <AlertCircle size={18} />
              {error}
            </div>
          )}
        </div>

        {/* Results Section */}
        {result && (
          <div className="space-y-4">
            {/* AI Summary */}
            <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
              <div className="flex items-center justify-between mb-4">
                <h2 className="text-2xl font-bold text-white flex items-center gap-2">
                  <FileText size={24} />
                  AI Analysis
                </h2>
                <button
                  onClick={() => copyToClipboard(result.aiSummary)}
                  className="px-3 py-1 bg-white/10 hover:bg-white/20 text-white rounded-lg text-sm transition-colors"
                >
                  Copy
                </button>
              </div>
              <div className="text-blue-100 whitespace-pre-wrap bg-black/20 p-4 rounded-lg">
                {result.aiSummary}
              </div>
            </div>

            {result.pageData && (
              <>
                {/* Metadata */}
                {Object.keys(result.pageData.metadata).length > 0 && (
                  <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
                    <h2 className="text-2xl font-bold text-white mb-4 flex items-center gap-2">
                      <Code size={24} />
                      Metadata
                    </h2>
                    <div className="space-y-2">
                      {Object.entries(result.pageData.metadata).map(([key, value]) => (
                        <div key={key} className="flex gap-2">
                          <span className="text-blue-300 font-mono text-sm min-w-[200px]">{key}:</span>
                          <span className="text-white text-sm">{value}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                )}

                {/* Headings */}
                {result.pageData.headings.length > 0 && (
                  <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
                    <h2 className="text-2xl font-bold text-white mb-4 flex items-center gap-2">
                      <FileText size={24} />
                      Headings ({result.pageData.headings.length})
                    </h2>
                    <div className="space-y-2 max-h-96 overflow-y-auto">
                      {result.pageData.headings.map((heading, idx) => (
                        <div key={idx} className="flex gap-3 items-start">
                          <span className="text-blue-400 font-mono text-sm min-w-[40px]">{heading.level}</span>
                          <span className="text-white">{heading.text}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                )}

                {/* Links */}
                {result.pageData.links.length > 0 && (
                  <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
                    <div className="flex items-center justify-between mb-4">
                      <h2 className="text-2xl font-bold text-white flex items-center gap-2">
                        <Link2 size={24} />
                        Links ({result.pageData.links.length})
                      </h2>
                      <button
                        onClick={() => downloadData(result.pageData.links, 'links.json')}
                        className="px-3 py-1 bg-white/10 hover:bg-white/20 text-white rounded-lg text-sm transition-colors flex items-center gap-2"
                      >
                        <Download size={16} />
                        Export
                      </button>
                    </div>
                    <div className="space-y-1 max-h-96 overflow-y-auto">
                      {result.pageData.links.slice(0, 50).map((link, idx) => (
                        <div key={idx} className="text-blue-300 text-sm font-mono break-all hover:text-blue-200">
                          {link}
                        </div>
                      ))}
                      {result.pageData.links.length > 50 && (
                        <div className="text-white/60 text-sm italic">
                          ...and {result.pageData.links.length - 50} more links
                        </div>
                      )}
                    </div>
                  </div>
                )}

                {/* Images */}
                {result.pageData.images.length > 0 && (
                  <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
                    <div className="flex items-center justify-between mb-4">
                      <h2 className="text-2xl font-bold text-white flex items-center gap-2">
                        <Image size={24} />
                        Images ({result.pageData.images.length})
                      </h2>
                      <button
                        onClick={() => downloadData(result.pageData.images, 'images.json')}
                        className="px-3 py-1 bg-white/10 hover:bg-white/20 text-white rounded-lg text-sm transition-colors flex items-center gap-2"
                      >
                        <Download size={16} />
                        Export
                      </button>
                    </div>
                    <div className="space-y-1 max-h-96 overflow-y-auto">
                      {result.pageData.images.slice(0, 30).map((img, idx) => (
                        <div key={idx} className="text-purple-300 text-sm font-mono break-all hover:text-purple-200">
                          {img}
                        </div>
                      ))}
                      {result.pageData.images.length > 30 && (
                        <div className="text-white/60 text-sm italic">
                          ...and {result.pageData.images.length - 30} more images
                        </div>
                      )}
                    </div>
                  </div>
                )}

                {/* Text Content Preview */}
                <div className="bg-white/10 backdrop-blur-lg rounded-xl p-6 border border-white/20">
                  <div className="flex items-center justify-between mb-4">
                    <h2 className="text-2xl font-bold text-white flex items-center gap-2">
                      <FileText size={24} />
                      Text Content Preview
                    </h2>
                    <button
                      onClick={() => copyToClipboard(result.pageData.text)}
                      className="px-3 py-1 bg-white/10 hover:bg-white/20 text-white rounded-lg text-sm transition-colors"
                    >
                      Copy All
                    </button>
                  </div>
                  <div className="text-white/80 text-sm bg-black/20 p-4 rounded-lg max-h-96 overflow-y-auto">
                    {result.pageData.text.substring(0, 2000)}
                    {result.pageData.text.length > 2000 && '...'}
                  </div>
                  <div className="text-white/60 text-xs mt-2">
                    Total characters: {result.pageData.text.length.toLocaleString()}
                  </div>
                </div>

                {/* Export All */}
                <div className="flex justify-center">
                  <button
                    onClick={() => downloadData(result, `scrape-${new Date().getTime()}.json`)}
                    className="px-6 py-3 bg-green-500 hover:bg-green-600 text-white rounded-lg transition-colors flex items-center gap-2 font-medium"
                  >
                    <Download size={20} />
                    Export All Data as JSON
                  </button>
                </div>
              </>
            )}
          </div>
        )}
      </div>
    </div>
  );
}
